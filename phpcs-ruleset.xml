<?xml version="1.0"?>
<ruleset name="roeldev">
  <description>Slightly modified PSR-2 coding standard for PHPCS.</description>
  <arg name="tab-width" value="4" />

  <!-- Include the whole PSR-2 standard -->
  <rule ref="PSR2">
    <!-- else(if) does not have to be on the same line as the closing bracket before -->
    <exclude name="Squiz.ControlStructures.ControlSignature.SpaceAfterCloseBrace" />
  </rule>
</ruleset>
